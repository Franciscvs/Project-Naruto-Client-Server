#!/bin/sh
# Apache Maven Wrapper launcher
DIR="$(cd "$(dirname "$0")" && pwd)"
JAVA_EXE="java"
WRAPPER_JAR="$DIR/.mvn/wrapper/maven-wrapper.jar"
WRAPPER_PROPERTIES="$DIR/.mvn/wrapper/maven-wrapper.properties"
if [ -r "$WRAPPER_PROPERTIES" ]; then
  DISTRIBUTION_URL=$(sed -n 's/^distributionUrl=//p' "$WRAPPER_PROPERTIES")
fi
if [ ! -f "$WRAPPER_JAR" ]; then
  echo "Downloading Maven Wrapper..."
  mkdir -p "$DIR/.mvn/wrapper"
  curl -fsSL -o "$WRAPPER_JAR" https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.2.0/maven-wrapper-3.2.0.jar
fi
exec "$JAVA_EXE" -jar "$WRAPPER_JAR" -Dmaven.multiModuleProjectDirectory="$DIR" "$@"
